{
	"$schema": "https://developer.microsoft.com/json-schemas/rush/v5/rush.schema.json",
	"rushVersion": "5.76.1",
	"pnpmVersion": "7.9.4",
	"pnpmOptions": {
		"useWorkspaces": true
	},
	"approvedPackagesPolicy": {
		"reviewCategories": ["production", "tool", "prototype", "documentation", "utilities"],
		"ignoredNpmScopes": ["@types"]
	},
	"gitPolicy": {},
	"repository": {
		"url": "https://github.com/sedum-io/",
		"defaultBranch": "develop",
		"defaultRemote": "origin"
	},
	"eventHooks": {
		"preRushInstall": [],
		"postRushInstall": [],
		"preRushBuild": [],
		"postRushBuild": []
	},
	"variants": [],
	"telemetryEnabled": false,
	"hotfixChangeEnabled": false,
	"projects": [
		{
			"packageName": "@sedum/stonecrop",
			"projectFolder": "stonecrop",
			"reviewCategory": "prototype"
		},
		{
			"packageName": "@sedum/atable",
			"projectFolder": "atable",
			"reviewCategory": "prototype",
			// to avoid circular dependency problems
			"decoupledLocalDependencies": ["@sedum/aform"]
		},
		{
			"packageName": "@sedum/aform",
			"projectFolder": "aform",
			"reviewCategory": "prototype",
			// to avoid circular dependency problems
			"decoupledLocalDependencies": ["@sedum/atable"]
		},
		{
			"packageName": "@sedum/desktop",
			"projectFolder": "desktop",
			"reviewCategory": "prototype"
		},
		{
			"packageName": "@sedum/examples",
			"projectFolder": "examples",
			"reviewCategory": "prototype"
		},
		{
			"packageName": "@sedum/utilities",
			"projectFolder": "utilities",
			"reviewCategory": "utilities"
		}
		// {
		//   "packageName": "@sedum/beam",
