{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"outDir": "dist",
		"types": ["vitest/globals", "vitest/jsdom"],
		"paths": {
			"@/*": ["./src/*"],
			"types/*": ["./src/types/*"]
		}
	},
	"include": [
		"env.d.ts",
		"src/**/*",
		"src/**/*.ts",
		"src/**/*.vue",
		"stories/**/*.json",
		"stories/**/*.story.vue",
		"tests/**/*.spec.ts",
		"tests/**/*.ts",
		"tests/**/*.vue"
	]
}
