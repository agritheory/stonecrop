			},
			"require": "./dist/aform.umd.cjs"
		},
		"./styles": "./dist/style.css"
	},
	"typings": "./dist/aform/src/index.d.ts",
	"files": [
		"dist/*",
		"src/*"
	],
	"scripts": {
		"prepublish": "heft build && vite build && rushx docs",
