		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-vue": "^9.11.1",
		"eslint": "^8.40.0",
		"jsdom": "^24.0.0",
		"stonecrop-rig": "workspace:*",
		"typescript": "^5.5.2",
		"vite": "^5.3.2",
		"vitest": "^1.6.0",
		"vue-router": "^4.4.0"
	},
	"peerDependencies": {
		"@stonecrop/atable": "workspace:*"
