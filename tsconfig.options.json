{
	"compilerOptions": {
		"rootDir": ".",
		"target": "esnext",
		"module": "preserve",
		"lib": ["dom", "dom.iterable", "esnext"],
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"disableReferencedProjectLoad": true,
		"emitDeclarationOnly": true,
		"isolatedModules": true,
		"skipLibCheck": true
	},
	"exclude": ["node_modules", "**/*.spec.ts"]
}
