{
	"compilerOptions": {
		"target": "es2017",
		"module": "esnext",
		"lib": ["esnext"],
		"moduleResolution": "node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"jsx": "preserve",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
	"exclude": ["node_modules"]
}
