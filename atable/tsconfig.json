{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"composite": true,
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"outDir": "dist",
		"baseUrl": ".",
		"types": ["vitest/globals", "vitest/jsdom"],
		"paths": {
			"@/*": ["src/*"],
			"types/*": ["types/*"]
		}
	},
	"include": [
		"env.d.ts",
		"src/**/*",
		"src/**/*.ts",
		"src/**/*.vue",
		"stories/**/*.json",
		"stories/**/*.setup.ts",
		"stories/**/*.story.vue",
		"tests/**/*.ts",
		"tests/**/*.vue",
		"types/**/*.ts"
	]
}
